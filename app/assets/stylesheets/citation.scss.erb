html,
body {
  height: 100%;
  font-family: 'Open Sans', sans-serif;
  /* The html and body elements cannot have any padding or margin. */
}

h1 {
  font-family: 'Roboto', sans-serif;
  font-size: 58px;
}

h2 {
  font-family: 'Roboto', sans-serif;
  font-size: 36px;
}

a.skm {
  width: 65px;
  height: 30px;
  background: url('tweet2citeLogo.svg');
  background-repeat: no-repeat;
  text-indent: 100%;
  white-space: nowrap;
  overflow: hidden;
  margin-top: 15px;
  margin-left: 15px;
}


/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by its height */
  margin: 0 auto -50px;
  /* Pad bottom by footer height */
  padding: 0 0 50px;
}

/* Set the fixed height of the footer here */
#footer {
  height: 50px;
}

#tweet-div {
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

#cite-input {
  padding-bottom: 25px;
  margin: 25px 0px 25px;
  border-bottom: 1px solid #eee;
}

.v-citation {
  background-color: #eee;
  padding: 10px;
}


#citations {
  margin-bottom: 25px;
}

#wrap > .container {
  padding: 60px 15px 0;
}

#follow-me {
  margin-top: 10px;
  margin-left: 30px;
}

#email-me {
  margin-right: 10px;
}

.t-button-div {
  max-width: 300px;
  margin: auto;
  text-align: center;
  margin-bottom: 20px;  
}

.container .credit {
  padding-top: 7px;
  margin-top: 10px;
  font-size: 12px;
  text-align: right;
}

#footer > .container {
  padding-left: 15px;
  padding-right: 15px;
}
